<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">
    <display-name>JsonTest</display-name>
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>

    
    <servlet>
        <servlet-name>QueryTeachersServlet</servlet-name>
        <servlet-class>com.xll.QueryTeachersServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>QueryTeachersServlet</servlet-name>
        <url-pattern>/queryTeacher</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>ReadParams</servlet-name>
        <servlet-class>com.xll.ReadParams</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ReadParams</servlet-name>
        <url-pattern>/ReadParams</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>AddTeacherServlet</servlet-name>
        <servlet-class>com.xll.AddTeacherServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AddTeacherServlet</servlet-name>
        <url-pattern>/addTeacher</url-pattern>
    </servlet-mapping>
</web-app>